<form action="/posts/<%= @post.id %>" method="post">
    <input id="hidden" type="hidden" name="_method" value="patch">
    <h2>Update your name </label><input type="text" id="name" name=<%= @post.name %>></h2><br>
    <h2>Update your content: </label><input type="text" id="content" name=<%= @post.content %>></h2><br>
    <input type="submit" value="submit">
</form>
